<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root_view_disc"
    android:layout_height="match_parent">

    <com.music.player.bhandari.m.customViews.nowplayingnew.PlayLayout
        android:id="@+id/mpv"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:pw_progress_line_enabled="true"
        app:pw_buttons_size="48dp"

        app:pw_progress_complete_line_stroke_width="5dp"
        app:pw_progress_line_stroke_width="3dp"

        app:pw_progress_line_padding="10dp"
        app:pw_diffusers_padding="15dp"

        app:pw_big_diffuser_color="@color/colorTransparent"
        app:pw_medium_diffuser_color="@color/colorTransparent"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_login_to_remove_ads"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/pw_circle_color_translucent"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_to_remove_ads"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/dismiss_Ad_removal_button"
                android:background="@color/colorTransparent"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/main_act_sign_in_title"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/dismiss_Ad_removal_button" />

            <ImageView
                android:id="@+id/dismiss_Ad_removal_button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ad_view_wrapper"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/ad_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:paddingEnd="15dp"
            android:gravity="end"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="@color/colorwhite"
            android:paddingRight="15dp"
            card_view:ignore="RtlSymmetry" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_disc_fragment"
            android:layout_gravity="bottom">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</RelativeLayout>